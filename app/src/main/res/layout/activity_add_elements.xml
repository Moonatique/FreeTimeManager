<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".TopView.AddElements">


    <LinearLayout


        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Create a new..."
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_weight="2"
            android:textColor="#ff3b7e6b"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_margin="15dp"
            android:text="Long term task"
            android:background="#ff4ec3ac"
            android:textColor="#fff"
            android:textStyle="bold"
            android:onClick="onClick_new_long_term_task"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_margin="15dp"
            android:text="Recurring task"
            android:background="#ff4ec3ac"
            android:textColor="#fff"
            android:textStyle="bold"
            android:onClick="onClick_new_recurring_task"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_margin="15dp"
            android:text="Freetime slot"
            android:background="#ff4ec3ac"
            android:textColor="#fff"
            android:textStyle="bold"
            android:onClick="onClick_new_freeTime_slot"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_margin="15dp"
            android:text="All day event"
            android:background="#ff4ec3ac"
            android:textColor="#fff"
            android:textStyle="bold"
            android:onClick="onClick_new_all_day_event"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_margin="15dp"
            android:text="One time task"
            android:background="#ff4ec3ac"
            android:textColor="#fff"
            android:textStyle="bold"
            android:onClick="onClick_new_one_time_task"/>
        </LinearLayout>

</RelativeLayout>
